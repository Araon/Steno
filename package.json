{
  "name": "steno",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first video captioning with lyric-style kinetic typography",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:web": "turbo run dev --filter=@steno/web",
    "dev:renderer": "turbo run dev --filter=@steno/renderer",
    "dev:api": "turbo run dev --filter=@steno/api",
    "dev:renderer-api": "turbo run dev --filter=@steno/renderer-api",
    "build:contracts": "turbo run build --filter=@steno/contracts"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
